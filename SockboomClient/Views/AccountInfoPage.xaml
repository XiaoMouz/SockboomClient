<Page
    x:Class="SockboomClient.Views.AccountInfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SockboomClient.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="using:CommunityToolkit.WinUI.Controls"
    Background="{ThemeResource ControlAltFillColorTransparentBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <!--  Spacing between cards  -->
        <x:Double x:Key="CardSpacing">3</x:Double>

        <!--  Style (inc. the correct spacing) of a section header  -->
        <Style
            x:Key="SectionHeaderTextBlockStyle"
            BasedOn="{StaticResource BodyStrongTextBlockStyle}"
            TargetType="TextBlock">
            <Style.Setters>
                <Setter Property="Margin" Value="1,29,0,5" />
            </Style.Setters>
        </Style>

        <Style x:Key="PanelStyle" TargetType="StackPanel">
            <Setter Property="Margin" Value="0,0,0,0" />
            <Setter Property="Padding" Value="18" />
            <Setter Property="Spacing" Value="{StaticResource CardSpacing}" />
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefault}" />
        </Style>
    </Page.Resources>
    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            x:Name="PageHeader"
            Margin="36,24,36,0"
            Style="{StaticResource TitleTextBlockStyle}"
            Text="用户信息" />

        <ScrollViewer
            x:Name="contentSV"
            Grid.Row="1"
            Padding="36,0,36,0"
            IsTabStop="False"
            UseSystemFocusVisuals="False"
            VerticalScrollBarVisibility="Auto"
            VerticalScrollMode="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.ChildrenTransitions>
                    <TransitionCollection>
                        <EntranceThemeTransition FromVerticalOffset="50" />
                        <RepositionThemeTransition IsStaggeringEnabled="False" />
                    </TransitionCollection>
                </Grid.ChildrenTransitions>

                <StackPanel Grid.Column="0" Spacing="{StaticResource CardSpacing}">
                    <TextBlock Style="{StaticResource SectionHeaderTextBlockStyle}" Text="信息" />
                    <Border
                        BorderBrush="Transparent"
                        BorderThickness="1"
                        CornerRadius="8">
                        <StackPanel Style="{StaticResource PanelStyle}">
                            <PersonPicture
                                Width="128"
                                Height="128"
                                ProfilePicture="https://learn.microsoft.com/windows/uwp/contacts-and-calendar/images/shoulder-tap-static-payload.png" />
                            <TextBlock>您好</TextBlock>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock>用户等级:</TextBlock>
                                <TextBlock Text="{Binding Level}" />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>


                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Spacing="{StaticResource CardSpacing}">
                        <TextBlock Style="{StaticResource SectionHeaderTextBlockStyle}" Text="状态" />
                        <Border
                            BorderBrush="Transparent"
                            BorderThickness="1"
                            CornerRadius="8">
                            <StackPanel Style="{StaticResource PanelStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="余" />
                                    <TextBlock Text="{Binding UnusedByString}" />
                                    <TextBlock Text="/" />
                                    <TextBlock Text="共" />
                                    <TextBlock Text="{Binding TotalByString}" />
                                </StackPanel>
                                <ProgressBar
                                    Name="TotalTrafficBar"
                                    Width="Auto"
                                    Loaded="TotalTrafficBar_Loaded" />
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <Grid Grid.Row="1">
                        <StackPanel Spacing="{StaticResource CardSpacing}">
                            <TextBlock Style="{StaticResource SectionHeaderTextBlockStyle}" Text="状态" />
                            <Border
                                BorderBrush="Transparent"
                                BorderThickness="1"
                                CornerRadius="8">
                                <StackPanel Style="{StaticResource PanelStyle}">
                                    <StackPanel Orientation="Horizontal" />

                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>

                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
