<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SockboomClient.Compose">

    <Style TargetType="local:CardPanel">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:CardPanel">
                    <StackPanel CornerRadius="8" Spacing="8">
                        <TextBlock Style="{StaticResource SectionHeaderTextBlockStyle}" Text="{TemplateBinding Title}" />
                        <ContentPresenter Background="{ThemeResource CardBackgroundFillColorDefault}" Content="{TemplateBinding Content}" />
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
